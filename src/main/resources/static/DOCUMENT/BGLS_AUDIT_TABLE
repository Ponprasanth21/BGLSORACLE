	"EVENT_ID" VARCHAR2(50 BYTE), 
	"ENTRY_USER" VARCHAR2(50 BYTE), 
	"ENTRY_TIME" DATE, 
	"AUTH_USER" NVARCHAR2(50), 
	"AUTH_TIME" DATE, 
	"AUDIT_TABLE" NVARCHAR2(50), 
	"AUDIT_SCREEN" NVARCHAR2(50), 
	"AUDIT_REF_NO" NVARCHAR2(100), 
	"AUDIT_DATE" DATE
   )   ;

